<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout">

    <ImageView
        android:id="@+id/comment_image"
        android:src="@drawable/ic_action_person"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/comment_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_author"
        android:layout_alignTop="@id/comment_image"
        android:layout_toRightOf="@+id/comment_image"
        android:layout_toEndOf="@id/comment_image"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment_time"
        android:gravity="end"
        android:layout_toRightOf="@+id/comment_author"
        android:layout_toEndOf="@id/comment_author"
        android:layout_alignTop="@id/comment_author"
        android:textSize="13sp"
        android:textColor="@color/raycast_sub_text"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/message_message"
        android:layout_toRightOf="@+id/comment_image"
        android:layout_toEndOf="@id/comment_image"
        android:layout_below="@+id/comment_author"
        android:textSize="16sp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />
</RelativeLayout>