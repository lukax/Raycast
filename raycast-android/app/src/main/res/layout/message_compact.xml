<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raycast.controller.MessageCompact">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/profile_image"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/message_distance"
            android:id="@+id/message_distance"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_alignBottom="@+id/profile_image"
            android:layout_toRightOf="@+id/profile_image" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/message_author"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/message_creator"
            android:layout_above="@+id/message_distance"
            android:layout_toLeftOf="@+id/message_content"
            android:layout_toStartOf="@+id/message_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/message_message"
            android:id="@+id/message_content"
            android:layout_toEndOf="@+id/message_distance"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/message_distance" />
    </RelativeLayout>

</RelativeLayout>
